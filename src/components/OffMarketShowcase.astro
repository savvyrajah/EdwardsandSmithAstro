---
import OffMarketPropertyCard from './OffMarketPropertyCard.astro';
---

<section class="off-market-showcase section">
  <div class="container">
    <div class="section-header">
      <h2>Exclusive Off-Market Properties</h2>
      <p>Access properties before they hit the market. Available only to our registered clients.</p>
    </div>

    <div class="properties-grid">
      <!-- Gold Coast Properties -->
      <OffMarketPropertyCard
        suburb="Mallawa Drive, Palm Beach"
        region="Gold Coast - Beachside"
        beds={4}
        baths={2}
        cars={2}
        price="$2.5M"
        image="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=800"
      />
      <OffMarketPropertyCard
        suburb="Nuthatch Drive, Burleigh Waters"
        region="Gold Coast"
        beds={4}
        baths={2}
        cars={2}
        price="$2.7M"
        image="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=800"
      />
      <OffMarketPropertyCard
        suburb="Aruma Avenue, Burleigh Waters"
        region="Gold Coast - Waterfront"
        beds={5}
        baths={3}
        cars={2}
        price="$4.5M"
        image="https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=800"
      />

      <!-- Brisbane Properties -->
      <OffMarketPropertyCard
        suburb="Wynnum Road, Wynnum"
        region="Brisbane Bayside"
        beds={4}
        baths={3}
        cars={1}
        price="$2M"
        image="https://images.unsplash.com/photo-1600047509807-ba8f99d2cdde?w=800"
      />
      <OffMarketPropertyCard
        suburb="Stradbroke Avenue, Wynnum"
        region="Brisbane Bayside"
        beds={3}
        baths={1}
        cars={1}
        price="$1.6M"
        image="https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=800"
      />

      <!-- Bali Property (Most Expensive) -->
      <OffMarketPropertyCard
        suburb="Seminyak"
        region="Bali - Central"
        beds={3}
        baths={3}
        pool={true}
        price="$480,000 USD"
        distanceToBeach="1 minute to the beach"
        image="https://images.unsplash.com/photo-1602391833977-358a52198938?w=800"
      />
    </div>

    <div class="cta-center">
      <a href="/off-market-properties" class="button-primary">View All Off-Market Properties</a>
    </div>
  </div>
</section>

<style>
  .off-market-showcase {
    background-color: #f9f9f9;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    margin-bottom: 15px;
  }

  .section-header p {
    font-size: var(--body-large);
    color: var(--text-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .properties-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 50px;
  }

  .cta-center {
    text-align: center;
  }

  @media (max-width: 1024px) {
    .properties-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .properties-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
