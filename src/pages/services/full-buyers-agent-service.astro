    color: var(--white);
    text-align: center;
  }

  .cta-section h2 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .cta-section p {
    margin-bottom: 25px;
    font-size: var(--body-large);
  }

  .cta-note {
    font-size: 14px;
    margin-top: 20px;
    opacity: 0.9;
  }

  .contact-section {
    background-color: #f9f9f9;
  }

  .form-container {
    max-width: 600px;
    margin: 0 auto;
    background-color: var(--white);
    padding: 40px;
    border-radius: var(--border-radius-small);
    box-shadow: var(--box-shadow-subtle);
  }

  .service-enquiry-form .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  .service-enquiry-form .form-group {
    margin-bottom: 20px;
  }

  .service-enquiry-form label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--text-primary);
  }

  .service-enquiry-form .required {
    color: #d32f2f;
  }

  .service-enquiry-form input,
  .service-enquiry-form select,
  .service-enquiry-form textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: var(--border-radius-small);
    font-size: 15px;
    font-family: var(--font-body);
  }

  .service-enquiry-form textarea {
    resize: vertical;
  }

