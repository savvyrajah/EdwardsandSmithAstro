<script>
  const form = document.getElementById('serviceEnquiryForm');
  const submitButton = document.getElementById('submitButton');
  const formMessage = document.getElementById('formMessage');
  const botField = document.getElementById('botField');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Check honeypot
    if (botField?.value) {
      return;
    }

    submitButton.disabled = true;
    submitButton.textContent = 'Submitting...';

    const formData = new FormData(form);
    const formId = document.getElementById('formId').value;
    const pageUri = document.getElementById('pageUri').value;
    const leadSource = document.getElementById('leadSource').value;

    const fields = {
      firstname: formData.get('firstName'),
      lastname: formData.get('lastName'),
      email: formData.get('email'),
      phone: formData.get('phone'),
      preferred_location: formData.get('location'),
      message: formData.get('message') || '',
      lead_source: leadSource
    };

    const hutk = document.cookie.match(/hubspotutk=([^;]+)/)?.[1] || '';
    const context = {
      hutk,
      pageUri,
      pageName: document.title
    };

    try {
      const response = await fetch('/api/hubspot-form', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          formId,
          fields,
          context
        })
      });

      const result = await response.json();

      if (response.ok && result.success) {
        formMessage.textContent = '✓ Thank you! We\'ll be in touch within 24 hours to discuss your requirements.';
        formMessage.className = 'form-message success';
        form.reset();
      } else {
        throw new Error(result.message || 'Submission failed');
      }
    } catch (error) {
      formMessage.textContent = 'Sorry, something went wrong. Please email us at info@edwardsandsmith.com.au or call 0413 245 025.';
      formMessage.className = 'form-message error';
    } finally {
      submitButton.disabled = false;
      submitButton.textContent = 'Request Free Consultation';
    }
  });
</script>

