    content: '✓';
    position: absolute;
    left: 0;
    color: var(--primary-green);
    font-weight: bold;
  }

  .comparison-section {
    background-color: #f9f9f9;
  }

  .comparison-table {
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background-color: var(--white);
    border-radius: var(--border-radius-small);
    overflow: hidden;
  }

  thead {
    background-color: var(--primary-green);
    color: var(--white);
  }

  th, td {
    padding: 15px;
