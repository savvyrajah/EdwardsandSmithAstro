    background-color: var(--white);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .faq-item h3 {
    color: var(--primary-green);
    font-size: 18px;
    margin-bottom: 10px;
  }

  .cta-section {
    background-color: var(--primary-green);
    color: var(--white);
    text-align: center;
  }

  .cta-section h2 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .cta-section p {
    margin-bottom: 25px;
    font-size: var(--body-large);
  }

  .cta-note {
    font-size: 14px;
    margin-top: 20px;
    opacity: 0.9;
  }

  @media (max-width: 1024px) {
    .overview-content,
    .included-grid,
    .psychology-grid,
    .strategies-grid,
    .faq-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    table {
      font-size: 14px;
    }

    th, td {
      padding: 10px;
    }
  }
</style>

