    font-family: var(--font-heading);
    font-size: 18px;
    font-weight: 600;
    color: var(--primary-green);
    margin-bottom: 5px;
  }

  .author-title {
    font-size: 14px;
    color: var(--text-light);
  }

  .faq-section {
    background-color: #f9f9f9;
  }

