---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const goldCoastProperties = [
  {
    location: "Burleigh Waters, QLD",
    beds: 4, baths: 2, cars: 2,
    image: "/assets/images/image-29-e1755139676515-1024x689.jpg",
    story: "Secured in 2 weeks, saved over $100,000 on budget"
  },
  {
    location: "Burleigh Heads, QLD",
    beds: 4, baths: 2, cars: 2,
    image: "/assets/images/image0-e1755138640868-1024x692.jpg",
    story: "Off-market SMSF investment property secured"
  },
  {
    location: "Burleigh Heads, QLD",
    beds: 4, baths: 2, cars: 2,
    image: "/assets/images/recent-purchase-3.jpg",
    story: "AFL Suns star Ben King's dream home - secured in record time"
  },
  {
    location: "Maudsland, QLD",
    beds: 5, baths: 3, cars: 3,
    image: "/assets/images/recent-purchase-3.jpg"
  },
  {
    location: "Palm Beach, QLD",
    beds: 4, baths: 3, cars: 2,
    image: "/assets/images/recent-purchase-1.jpg"
  },
  {
    location: "Currumbin Waters, QLD",
    beds: 5, baths: 3, cars: 2,
    image: "/assets/images/recent-purchase-3.jpg"
  },
  {
    location: "Mermaid Waters, QLD",
    beds: 4, baths: 2, cars: 2,
    image: "/assets/images/recent-purchase-1.jpg"
  },
  {
    location: "Robina, QLD",
    beds: 3, baths: 2, cars: 2,
    image: "/assets/images/recent-purchase-2.jpg"
  },
  {
    location: "Upper Coomera, QLD",
    beds: 4, baths: 2, cars: 2,
    image: "/assets/images/recent-purchase-3.jpg"
  },
  {
    location: "Kingscliff, NSW",
    beds: 4, baths: 2, cars: 2,
    image: "/assets/images/recent-purchase-3.jpg",
    story: "Just south of the Gold Coast border - beachside lifestyle"
  }
];
---

<Layout
  title="Recent Purchases Gold Coast | Edwards & Smith Buyers Agents"
  description="See properties we've recently secured for clients across the Gold Coast. Expert buyers agents specializing in coastal lifestyle properties."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="hero section">
      <div class="container">
        <h1>Recent Purchases - Gold Coast</h1>
        <p class="hero-subtitle">Properties we've secured across Australia's premier coastal region</p>
      </div>
    </section>

    <!-- Gold Coast Properties -->
    <section class="properties-section section">
      <div class="container">
        <div class="section-header">
          <h2>Gold Coast & Northern NSW</h2>
          <p>Premium coastal properties from Burleigh to Kingscliff</p>
        </div>
        <div class="properties-grid">
          {goldCoastProperties.map(property => (
            <div class="property-card">
              <div class="property-image">
                <img src={property.image} alt={property.location} loading="lazy" />
              </div>
              <div class="property-details">
                <h3>{property.location}</h3>
                <div class="property-features">
                  <span>{property.beds} bed</span>
                  <span>{property.baths} bath</span>
                  <span>{property.cars} car</span>
                </div>
                {property.story && (
                  <p class="property-story">{property.story}</p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section section">
      <div class="container">
        <h2>Looking to Buy on the Gold Coast?</h2>
        <p>Let our coastal property experts help you secure your dream beachside home</p>
        <a href="/book-free-consultation" class="button-primary">Book Free Consultation</a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--primary-green), var(--olive-green));
    color: var(--white);
    text-align: center;
    padding: 80px 20px;
  }

  .hero h1 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .hero-subtitle {
    font-family: var(--font-heading);
    font-size: 18px;
  }

  .properties-section {
    background-color: var(--white);
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-header h2 {
    margin-bottom: 10px;
  }

  .section-header p {
    font-size: var(--body-large);
    color: var(--text-light);
  }

  .properties-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .property-card {
    background-color: var(--white);
    border-radius: var(--border-radius-small);
    overflow: hidden;
    box-shadow: var(--box-shadow-subtle);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .property-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .property-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .property-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .property-card:hover .property-image img {
    transform: scale(1.05);
  }

  .property-details {
    padding: 25px;
  }

  .property-details h3 {
    color: var(--primary-green);
    font-size: 18px;
    margin-bottom: 12px;
  }

  .property-features {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
  }

  .property-features span {
    font-family: var(--font-heading);
    font-size: 13px;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .property-story {
    font-size: 14px;
    font-style: italic;
    color: var(--text-light);
    line-height: 1.5;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid #eee;
  }

  .cta-section {
    background-color: var(--primary-green);
    color: var(--white);
    text-align: center;
  }

  .cta-section h2 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .cta-section p {
    margin-bottom: 25px;
    font-size: var(--body-large);
  }

  @media (max-width: 1024px) {
    .properties-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .properties-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Gold Coast Recent Property Purchases",
  "description": "Properties recently purchased by Edwards & Smith Buyers Agents on the Gold Coast",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@type": "Place",
        "name": "Gold Coast Properties",
        "description": "Recent purchases across the Gold Coast region"
      }
    }
  ]
}
</script>
