---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Page Not Found | Edwards & Smith Buyers Agents"
  description="The page you're looking for doesn't exist. Browse our off-market properties or return to the homepage."
>
  <Header />
  <main>
    <section class="error-section">
      <div class="container">
        <div class="error-content">
          <h1 class="error-code">404</h1>
          <h2>Page Not Found</h2>
          <p class="error-message">
            Sorry, we couldn't find the page you're looking for. It may have been moved or no longer exists.
          </p>

          <div class="cta-buttons">
            <a href="/" class="button-primary">Back to Home</a>
            <a href="/off-market-properties" class="button-secondary">View Off-Market Properties</a>
          </div>

          <div class="helpful-links">
            <h3>You might be interested in:</h3>
            <ul>
              <li><a href="/brisbane/off-market">Brisbane Off-Market Properties</a></li>
              <li><a href="/gold-coast/off-market">Gold Coast Off-Market Properties</a></li>
              <li><a href="/bali/off-market">Bali Off-Market Properties</a></li>
              <li><a href="/services">Our Services</a></li>
              <li><a href="/team">Meet the Team</a></li>
              <li><a href="/consultation">Book a Consultation</a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .error-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--white);
    padding: 80px 20px;
  }

  .error-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .error-code {
    font-size: 120px;
    font-family: Georgia, 'Times New Roman', serif;
    color: var(--primary-green);
    margin-bottom: 20px;
    line-height: 1;
    font-weight: 400;
  }

  .error-content h2 {
    font-size: 36px;
    color: var(--text-heading);
    margin-bottom: 20px;
  }

  .error-message {
    font-size: 18px;
    color: var(--text-light);
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }

  .cta-buttons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .button-secondary {
    padding: 16px 32px;
    background-color: transparent;
    color: var(--primary-green);
    border: 2px solid var(--primary-green);
    text-decoration: none;
    font-family: var(--font-heading);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 0;
  }

  .button-secondary:hover {
    background-color: var(--primary-green);
    color: var(--white);
  }

  .helpful-links {
    background-color: #f9f9f9;
    padding: 40px;
    border-radius: var(--border-radius-small);
    margin-top: 40px;
  }

  .helpful-links h3 {
    font-size: 20px;
    color: var(--primary-green);
    margin-bottom: 25px;
  }

  .helpful-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }

  .helpful-links li {
    text-align: left;
  }

  .helpful-links a {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 16px;
    transition: color 0.3s ease;
    display: inline-block;
  }

  .helpful-links a:hover {
    color: var(--primary-green);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 80px;
    }

    .error-content h2 {
      font-size: 28px;
    }

    .error-message {
      font-size: 16px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons a {
      width: 100%;
      max-width: 300px;
    }

    .helpful-links {
      padding: 30px 20px;
    }

    .helpful-links ul {
      grid-template-columns: 1fr;
    }

    .helpful-links li {
      text-align: center;
    }
  }
</style>
