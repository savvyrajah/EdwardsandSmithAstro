---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import OffMarketShowcase from '../components/OffMarketShowcase.astro';
import Testimonials from '../components/Testimonials.astro';
import PropertyCard from '../components/PropertyCard.astro';
import HowWeWork from '../components/HowWeWork.astro';
import IntroSection from '../components/IntroSection.astro';
import ServiceAreas from '../components/ServiceAreas.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Brisbane & Gold Coast Buyers Agents | Edwards & Smith | Access Off-Market Properties">
  <Header />
  <main>
    <Hero />
    <Stats />
    <IntroSection />
    <WhyChooseUs />
    <OffMarketShowcase />
    <Testimonials />

    <!-- Recent Purchases Section -->
    <section class="recent-purchases section" id="recent">
      <div class="container-wide">
        <div class="section-header">
          <h2>Recent Purchases</h2>
          <p>See the properties we've secured for our clients</p>
        </div>
        <div class="properties-grid">
          <PropertyCard
            image="/assets/images/image-29-e1755139676515-1024x689.jpg"
            title="Burleigh Waters, 4220"
            description="Secured in 2 weeks, saved over $100,000 on budget"
          />
          <PropertyCard
            image="/assets/images/outdoor-carina.jpg"
            title="Carina Heights, 4152"
            description="Found after client's 12-month solo search ended"
          />
          <PropertyCard
            image="/assets/images/image0-e1755138640868-1024x692.jpg"
            title="Burleigh Heads, 4220"
            description="Off-market SMSF investment property secured"
          />
        </div>
        <div class="cta-center">
          <a href="/recent-purchases" class="button-primary">View All Recent Purchases</a>
        </div>
      </div>
    </section>

    <HowWeWork />
    <ServiceAreas />
    <FAQ />
  </main>
  <Footer />
</Layout>

<style>
  main {
    min-height: 100vh;
  }

  .recent-purchases {
    background-color: #f9f9f9;
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-header h2 {
    margin-bottom: 10px;
  }

  .section-header p {
    font-size: var(--body-large);
    color: var(--text-light);
  }

  .properties-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 40px;
  }

  .cta-center {
    text-align: center;
  }

  @media (max-width: 1024px) {
    .properties-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .properties-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
