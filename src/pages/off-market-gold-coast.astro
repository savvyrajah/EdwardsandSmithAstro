  }

  .step {
    text-align: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background-color: var(--primary-green);
    color: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: 600;
    margin: 0 auto 15px;
  }

  .step h3 {
    margin-bottom: 10px;
  }

  .step p {
    margin-bottom: 10px;
  }

  .step-note {
    font-size: 14px;
    font-style: italic;
    color: var(--text-light);
