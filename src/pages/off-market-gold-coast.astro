  }

  .button-text:hover {
    opacity: 0.7;
  }

  .suburbs-section {
    background-color: var(--white);
  }

  .suburbs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .suburb-highlight {
    background-color: #f9f9f9;
    padding: 25px;
    border-radius: var(--border-radius-small);
  }

  .suburb-highlight h3 {
    color: var(--primary-green);
    margin-bottom: 10px;
  }

  .success-section {
    background-color: #f9f9f9;
  }

  .stories-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .story {
    background-color: var(--white);
    padding: 30px;
    border-radius: var(--border-radius-small);
    border-left: 4px solid var(--primary-green);
  }

  .story h3 {
    color: var(--primary-green);
    margin-bottom: 15px;
  }

  .story-details {
    font-size: 14px;
