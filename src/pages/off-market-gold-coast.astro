---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import OffMarketPropertyCard from '../components/OffMarketPropertyCard.astro';
import PropertyCard from '../components/PropertyCard.astro';
---

<Layout
  title="Gold Coast Off-Market Properties | Burleigh, Palm Beach Pre-Market Homes | Edwards & Smith"
  description="Access exclusive Gold Coast off-market properties in Burleigh Waters, Palm Beach, and more. Get pre-market access before public listings with Edwards & Smith Buyers Agents."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="offmarket-hero section">
      <div class="container">
        <h1>Gold Coast Off-Market & Pre-Market Properties</h1>
        <p class="hero-subtitle">Exclusive opportunities from Palm Beach to Broadbeach</p>
      </div>
    </section>
    <!-- Breadcrumbs -->
    <section class="page-header">
      <div class="container">
        <div class="breadcrumb-row">
          <div class="breadcrumb">
            <a href="/">Home</a> / <a href="/off-market-properties">Off-Market Properties</a> / <span>Gold Coast</span>
          </div>
          <div class="last-updated">Last Updated: 8 October 2025</div>
        </div>
      </div>
    </section>

    <!-- Current Gold Coast Off-Market Properties -->
    <section class="properties-section section">
      <div class="container-wide">
        <div class="section-header">
          <h2>Current Gold Coast Off-Market Opportunities</h2>
          <p class="section-intro">
            Access Gold Coast's most desirable off-market properties before they reach the public market. From beachfront homes to family estates, we bring you exclusive opportunities. These premium properties are available to serious, finance-approved buyers only.
          </p>
        </div>

        <div class="properties-grid">
          <OffMarketPropertyCard
            suburb="Mallawa Drive, Palm Beach"
            region="Gold Coast - Beachside"
            beds={4}
            baths={2}
            cars={2}
            price="$2.5M"
            image="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?w=800"
          />
          <OffMarketPropertyCard
            suburb="Nuthatch Drive, Burleigh Waters"
            region="Gold Coast"
            beds={4}
            baths={2}
            cars={2}
            price="$2.7M"
            image="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=800"
          />
          <OffMarketPropertyCard
            suburb="Wagtail Court, Burleigh Waters"
            region="Gold Coast"
            beds={3}
            baths={2}
            cars={2}
            price="$1.3M"
            image="https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=800"
          />
          <OffMarketPropertyCard
            suburb="Aruma Avenue, Burleigh Waters"
            region="Gold Coast - Waterfront"
            beds={5}
            baths={3}
            cars={2}
            price="$4.5M"
            image="https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=800"
          />
          <OffMarketPropertyCard
            suburb="Kingfisher Crescent, Burleigh Waters"
            region="Gold Coast"
            beds={5}
            baths={2}
            cars={2}
            price="$3.5M"
            image="https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=800"
          />
          <OffMarketPropertyCard
            suburb="Penguin Parade, Burleigh Waters"
            region="Gold Coast"
            beds={4}
            baths={4}
            cars={2}
            price="$2.8M"
            image="https://images.unsplash.com/photo-1600047509807-ba8f99d2cdde?w=800"
          />
        </div>
      </div>
    </section>

    <!-- How It Works Process -->
    <section class="process-section section">
      <div class="container">
        <div class="section-header">
          <h2>How It Works</h2>
          <p class="section-intro">Our proven 6-step process to finding your dream Gold Coast property</p>
        </div>
        <div class="steps">
          <div class="step">
            <div class="step-number">1</div>
            <h3>Free Consultation</h3>
            <p>We learn about your needs, budget, and timeline through a detailed property brief</p>
            <p class="step-note">No obligation, no pressure</p>
          </div>
          <div class="step">
            <div class="step-number">2</div>
            <h3>Define Your Criteria</h3>
            <p>Budget, location, property type, and must-haves</p>
            <p class="step-note">We create your customised property brief</p>
          </div>
          <div class="step">
            <div class="step-number">3</div>
            <h3>Diligent Research & Sourcing</h3>
            <p>We search on-market AND off-market properties across Queensland</p>
            <p class="step-note">Access to exclusive deals you won't find online - we review 40+ properties weekly</p>
          </div>
          <div class="step">
            <div class="step-number">4</div>
            <h3>Inspections & Due Diligence</h3>
            <p>We meticulously shortlist properties and attend inspections on your behalf</p>
            <p class="step-note">Complete due diligence: building & pest inspections, flood reports, council regulations</p>
          </div>
          <div class="step">
            <div class="step-number">5</div>
            <h3>Strategic Negotiation</h3>
            <p>We negotiate on your behalf using our deep agent relationships</p>
            <p class="step-note">Real estate agents give our clients preference because they know deals won't fall through</p>
          </div>
          <div class="step">
            <div class="step-number">6</div>
            <h3>Settlement Support</h3>
            <p>We provide unwavering support through settlement proceedings</p>
            <p class="step-note">Final inspection, seamless handover, and you move into your dream property</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Purchases on Gold Coast -->
    <section class="recent-purchases section">
      <div class="container-wide">
        <div class="section-header">
          <h2>Recent Purchases on the Gold Coast</h2>
          <p class="section-intro">See what we've secured for our clients across the Gold Coast</p>
        </div>
        <div class="properties-grid">
          <PropertyCard
            image="/assets/images/burleigh-waters-4220.jpg"
            title="Burleigh Waters, 4220"
            description="Not only did we secure this stunning family home in Burleigh within 2 weeks for our clients, but we also saved them over $100,000 with their budget."
          />
          <PropertyCard
            image="/assets/images/burleigh-heads-4220-warehouse.jpg"
            title="Burleigh Heads, 4220"
            description="SMSF Warehouse in Burleigh Heads. We recently helped our client secure this blue chip investment"
          />
          <PropertyCard
            image="/assets/images/palm-beach-4221-new.jpg"
            title="Palm Beach, 4221"
            description="Our client came to us after spending some time searching for the perfect home. They were after something very specific…"
          />
        </div>
        <div class="view-all-link">
          <a href="/gold-coast/recent-purchases" class="button-text">View All Recent Purchases →</a>
        </div>
      </div>
    </section>

    <!-- Gold Coast Hot Spots -->
    <section class="suburbs-section section">
      <div class="container">
        <div class="section-header">
          <h2>Gold Coast Areas We Cover</h2>
          <p class="section-intro">Specializing in the Gold Coast's most sought-after beachside suburbs</p>
        </div>
        <div class="suburbs-grid">
          <div class="suburb-highlight">
            <h3>Burleigh Heads & Waters</h3>
            <p>Lifestyle capital of the Gold Coast. Strong demand for family homes near Burleigh village and beaches.</p>
          </div>
          <div class="suburb-highlight">
            <h3>Palm Beach</h3>
            <p>Prestigious beachfront living. Highly sought-after by families and downsizers seeking coastal luxury.</p>
          </div>
          <div class="suburb-highlight">
            <h3>Mermaid Beach</h3>
            <p>Central Gold Coast location. Perfect for professionals wanting beach access and city convenience.</p>
          </div>
          <div class="suburb-highlight">
            <h3>Currumbin & Elanora</h3>
            <p>Family-friendly southern Gold Coast. Great schools, parks, and more affordable entry points.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Success Stories -->
    <section class="success-section section">
      <div class="container">
        <div class="section-header">
          <h2>Gold Coast Off-Market Success Stories</h2>
        </div>
        <div class="stories-grid">
          <div class="story">
            <h3>$100K Saved in Burleigh Waters</h3>
            <p>"We secured a stunning family home for our clients in Burleigh Waters $100K under budget. The off-market opportunity meant no competition and strong negotiating power."</p>
            <p class="story-details">4 bed, 2 bath | Purchased in 2 weeks</p>
          </div>
          <div class="story">
            <h3>Perfect Palm Beach Find</h3>
            <p>"After 12 months of searching, we found this family the perfect off-market property in Palm Beach. Saved them time, stress, and money."</p>
            <p class="story-details">4 bed, 3 bath | Off-market exclusive</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section section">
      <div class="container">
        <h2>Don't Miss Gold Coast's Best Off-Market Opportunities</h2>
        <p>Secure your dream property before it hits the market. Book your free consultation now.</p>
        <a href="#contact" class="button-primary">Book Free Consultation</a>
        <p class="cta-note">Act fast | Premium properties move quickly</p>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-section section" id="contact">
      <div class="container">
        <div class="section-header">
          <h2>Get Notified About Gold Coast Off-Market Properties</h2>
          <p class="section-intro">Be first to know when new off-market properties become available on the Gold Coast. Complete your profile to receive exclusive alerts.</p>
        </div>

        <div class="cta-box-inline">
          <h3>Get Exclusive Gold Coast Property Alerts</h3>
          <p>Access off-market properties before they're publicly listed</p>
          <button class="button-primary open-form-btn">Get Off-Market Property Alerts</button>
        </div>
      </div>
    </section>

    <!-- Progressive Profiling Modal -->
    <div id="lead-form-modal" class="modal">
      <div class="modal-content">
        <button class="modal-close">&times;</button>

        <!-- Step 1: Property Goal -->
        <div class="form-step active" data-step="1">
          <h3>What's your property goal?</h3>
          <div class="button-group">
            <button class="choice-btn" data-value="Investment">Investment</button>
            <button class="choice-btn" data-value="Owner-Occupier">Owner-Occupier</button>
            <button class="choice-btn" data-value="First Home">First Home</button>
            <button class="choice-btn" data-value="Upgrading">Upgrading</button>
          </div>
        </div>

        <!-- Step 2: Budget -->
        <div class="form-step" data-step="2">
          <h3>What's your budget range?</h3>
          <div class="button-group">
            <button class="choice-btn" data-value="<$750k">&lt;$750k</button>
            <button class="choice-btn" data-value="$750k-$1.5M">$750k-$1.5M</button>
            <button class="choice-btn" data-value="$1.5M-$3M">$1.5M-$3M</button>
            <button class="choice-btn" data-value="$3M+">$3M+</button>
          </div>
        </div>

        <!-- Step 3: Timeline -->
        <div class="form-step" data-step="3">
          <h3>When are you looking to buy?</h3>
          <div class="button-group">
            <button class="choice-btn" data-value="0-3 months">0-3 months</button>
            <button class="choice-btn" data-value="3-6 months">3-6 months</button>
            <button class="choice-btn" data-value="6-12 months">6-12 months</button>
            <button class="choice-btn" data-value="12+ months">12+ months</button>
          </div>
        </div>

        <!-- Step 4: Contact Info -->
        <div class="form-step" data-step="4">
          <h3 id="modal-heading">Get Notified About Gold Coast Off-Market Properties</h3>
          <form id="contact-form" name="goldcoast-offmarket-alerts">
            <input type="hidden" id="formId" value="3576aeec-7d25-4a89-b648-689efe7f5ee6">
            <input type="hidden" id="pageUri" value="/off-market-gold-coast">
            <input type="hidden" id="leadSource" value="Off-Market Gold Coast Alerts">
            <input type="hidden" id="location" value="gold_coast">
            <input type="hidden" id="goal-value" name="goal" value="">
            <input type="hidden" id="budget-value" name="budget" value="">
            <input type="hidden" id="timeline-value" name="timeline" value="">

            <div class="form-group">
              <label for="first-name">First Name *</label>
              <input type="text" id="first-name" name="firstName" required>
            </div>

            <div class="form-group">
              <label for="last-name">Last Name *</label>
              <input type="text" id="last-name" name="lastName" required>
            </div>

            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone">
            </div>

            <div class="checkbox-group">
              <input type="checkbox" id="alerts" name="offMarketAlerts" checked>
              <label for="alerts">I want off-market property alerts</label>
            </div>

            <button type="submit" class="button-primary" id="submitButton">Get Gold Coast Property Alerts →</button>
            <div id="formMessage" class="form-message hidden"></div>
          </form>
        </div>

        <!-- Step 5: Confirmation -->
        <div class="form-step" data-step="5">
          <div class="success-message">
            <h3>Success! You're on the list</h3>
            <p>We'll send you exclusive Gold Coast off-market property alerts matching your criteria.</p>
            <p>You'll be first to know when new opportunities become available.</p>
            <button class="button-secondary modal-close">Close</button>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .offmarket-hero {
    background-image: url('https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=1600'), linear-gradient(135deg, rgba(90, 91, 84, 0.85), rgba(137, 139, 122, 0.85));
    background-size: cover;
    background-position: center;
    background-blend-mode: overlay;
    color: var(--white);
    text-align: center;
    padding: 60px 20px;
    position: relative;
  }

  .offmarket-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(90, 91, 84, 0.7), rgba(137, 139, 122, 0.7));
    z-index: 0;
  }

  .offmarket-hero .container {
    position: relative;
    z-index: 1;
  }

  .offmarket-hero h1 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .hero-subtitle {
    font-family: var(--font-heading);
    font-size: 20px;
    margin-bottom: 20px;
  }

