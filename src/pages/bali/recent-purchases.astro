---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const baliProperties = [
  {
    location: "Villa Pulang, Pererenan, 80351",
    image: "/assets/images/villa-pulang-pererenan-80351.webp",
    story: "Nestled in the vibrant heart of Pererenan, this property enjoys a strategic yet serene location, tucked away from the bustling main street."
  },
  {
    location: "Villa Une Escale, Ungasan, 80362",
    image: "/assets/images/villa-une-escale-ungasan-80362.webp",
    story: "Boasting three bedrooms, three bathrooms, and an additional guest toilet, this spacious retreat provides ample space for relaxation and entertainment."
  },
  {
    location: "Villa Patrice, Ungasan, 80362",
    image: "/assets/images/villa-patrice-ungasan-80362.webp",
    story: "Situated in the lively core of Ungasan, close to the golf course complex, this stunning villa seamlessly combines modern opulence with tropical serenity."
  }
];

// Helper function to convert location to URL slug
function locationToSlug(location: string): string {
  return location
    .toLowerCase()
    .replace(/villa\s+/i, 'villa-')
    .replace(/,\s*/g, '-')
    .replace(/\s+/g, '-')
    .replace(/[^a-z0-9-]/g, '');
}
---

<Layout
  title="Recent Purchases Bali | Edwards & Smith Buyers Agents"
  description="See villas we've recently secured for clients across Bali. Expert buyers agents helping Australians invest in Bali property."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="hero section">
      <div class="container">
        <h1>Recent Purchases - Bali</h1>
        <p class="hero-subtitle">Villas we've secured for Australian clients in Bali</p>
      </div>
    </section>

    <!-- Bali Properties -->
    <section class="properties-section section">
      <div class="container">
        <div class="section-header">
          <h2>Bali Villas</h2>
          <p>Helping Australians secure their dream villas in paradise</p>
        </div>
        <div class="properties-grid">
          {baliProperties.map(property => (
            <a href={`/recent-purchases/bali/${locationToSlug(property.location)}`} class="property-card">
              <div class="property-image">
                <img src={property.image} alt={property.location} loading="lazy" />
              </div>
              <div class="property-details">
                <h3>{property.location}</h3>
                {property.story && (
                  <p class="property-story">{property.story}</p>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section section">
      <div class="container">
        <h2>Looking to Buy a Villa in Bali?</h2>
        <p>Let our Bali experts help you secure your dream villa</p>
        <a href="/book-free-consultation" class="button-primary">Book Free Consultation</a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero {
    background-image: url('/assets/images/villa-pulang-pererenan-80351.webp'), linear-gradient(135deg, rgba(90, 91, 84, 0.85), rgba(137, 139, 122, 0.85));
    background-size: cover;
    background-position: center;
    background-blend-mode: overlay;
    color: var(--white);
    text-align: center;
    padding: 80px 20px;
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(90, 91, 84, 0.7), rgba(137, 139, 122, 0.7));
    z-index: 0;
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .hero-subtitle {
    font-family: var(--font-heading);
    font-size: 20px;
  }

  .properties-section {
    background-color: var(--white);
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-header h2 {
    margin-bottom: 10px;
  }

  .section-header p {
    color: var(--text-secondary);
    font-size: 18px;
  }

  .properties-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 30px;
  }

  .property-card {
    background-color: #f9f9f9;
    border-radius: var(--border-radius-small);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: var(--box-shadow-subtle);
  }

  .property-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--box-shadow-medium);
  }

  .property-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .property-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .property-card:hover .property-image img {
    transform: scale(1.05);
  }

  .property-details {
    padding: 25px;
  }

  .property-details h3 {
    color: var(--primary-green);
    margin-bottom: 10px;
    font-size: 20px;
  }

  .property-story {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 14px;
    margin: 0;
  }

  .cta-section {
    background-color: var(--primary-green);
    color: var(--white);
    text-align: center;
  }

  .cta-section h2 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .cta-section p {
    margin-bottom: 25px;
    font-size: var(--body-large);
  }

  @media (max-width: 768px) {
    .properties-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Bali Investment Villa Purchases",
  "description": "Investment villas recently purchased by Edwards & Smith Buyers Agents in Bali",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@type": "Place",
        "name": "Bali Investment Villas",
        "description": "High ROI investment properties across Bali"
      }
    }
  ]
}
</script>
