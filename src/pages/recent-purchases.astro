// Helper function to convert location to URL slug
function locationToSlug(location: string): string {
  return location
    .toLowerCase()
    .replace(/,?\s+nsw\s+/i, '-') // Handle "NSW" in Kingscliff
    .replace(/,\s*/g, '-') // Replace commas with hyphens
    .replace(/\s+/g, '-') // Replace spaces with hyphens
    .replace(/[^a-z0-9-]/g, ''); // Remove special characters
}
