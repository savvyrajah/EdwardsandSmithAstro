    <!-- Bali & Beyond -->
    <section class="properties-section section alt-bg">
      <div class="container">
        <div class="section-header">
          <h2>Bali & Special Purchases</h2>
          <p>Investment properties and unique opportunities</p>
        </div>
        <div class="properties-grid">
          {baliProperties.map(property => (
            <div class="property-card">
