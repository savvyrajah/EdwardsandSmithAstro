---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Buyers Agent Services Brisbane & Gold Coast | Edwards & Smith"
  description="Professional buyers agent services in Queensland and Bali. Full property search, auction representation, and negotiation services. Transparent pricing: 2-3% in QLD, under 5% in Bali."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="services-hero section">
      <div class="container">
        <h1>Our Buyers Agent Services</h1>
        <p class="hero-subtitle">Expert representation for your property purchase</p>
        <p class="hero-description">
          We provide transparent, professional buyers agent services across Queensland and Bali.
          Our fees are 2-3% of purchase price in Queensland and under 5% for Bali properties.
        </p>
      </div>
    </section>

    <!-- Introduction -->
    <section class="intro-section section">
      <div class="container">
        <div class="intro-content">
          <div class="intro-text">
            <h2>Bridging the Gap Between You and the Property Market</h2>
            <p>
              Founded by former AFL players Jake Edwards and Ely Smith, Edwards & Smith Buyers Agents
              is built on the principles of consistency, transparency, and authenticity. We represent
              your interests throughout the property buying journey, ensuring you secure the right
              property at the best possible price.
            </p>
            <p>
              Whether you need full-service representation from search to settlement, expert auction
              bidding, or professional negotiation support, we tailor our services to your specific needs.
            </p>
          </div>
          <div class="intro-image">
            <img src="https://edwardsandsmith.com.au/wp-content/uploads/2024/12/ES-36-1.webp" alt="Edwards & Smith Buyers Agents" loading="lazy" />
          </div>
        </div>
      </div>
    </section>

    <!-- Services Grid -->
    <section class="services-grid-section section">
      <div class="container-wide">
        <div class="section-header">
          <h2>Our Services</h2>
          <p class="section-intro">Choose the level of support that's right for you</p>
        </div>

        <div class="services-grid">
          <!-- Full Premium Support -->
          <div class="service-card">
            <div class="service-header">
              <h3>Full Premium Support Package</h3>
              <p class="service-price">2-3% of purchase price (QLD) | <5% (Bali)</p>
            </div>
            <div class="service-content">
              <p class="service-description">
                Complete end-to-end buyers agent service from initial search through to settlement.
                Perfect for busy professionals or first-time buyers who want expert guidance throughout
                the entire process.
              </p>
              <ul class="service-features">
                <li>Tailored property search matching your criteria</li>
                <li>Exclusive off-market opportunities</li>
                <li>In-depth property evaluations and inspections</li>
                <li>Detailed research and due diligence</li>
                <li>Skilled negotiation and auction representation</li>
                <li>Ongoing settlement support</li>
              </ul>
              <a href="/services/full-buyers-agent-service" class="button-secondary">Learn More</a>
            </div>
          </div>

          <!-- Partial Service -->
          <div class="service-card featured">
            <div class="service-badge">Most Popular</div>
            <div class="service-header">
              <h3>Inspect, Evaluate & Negotiate</h3>
              <p class="service-price">Custom pricing based on scope</p>
            </div>
            <div class="service-content">
              <p class="service-description">
                You've found a property you love, but want expert evaluation and negotiation support.
                We provide independent assessment and strategic negotiation to secure the best price.
              </p>
              <ul class="service-features">
                <li>Thorough property condition reports</li>
                <li>Independent market value assessment</li>
                <li>Strategic negotiations on your behalf</li>
                <li>Settlement support and guidance</li>
              </ul>
              <a href="/services/property-evaluation-negotiation" class="button-secondary">Learn More</a>
            </div>
          </div>

          <!-- Auction Representation -->
          <div class="service-card">
            <div class="service-header">
              <h3>Auction Representation</h3>
              <p class="service-price">Fixed fee pricing</p>
            </div>
            <div class="service-content">
              <p class="service-description">
                Professional auction bidding removes the emotion and stress from auction day. We execute
                a strategic bidding plan designed to secure your property at the best possible price.
              </p>
              <ul class="service-features">
                <li>Property and market analysis</li>
                <li>Customized bidding strategy</li>
                <li>Experienced auction representation</li>
                <li>Post-auction negotiation if required</li>
              </ul>
              <a href="/services/auction-representation" class="button-secondary">Learn More</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="why-section section">
      <div class="container">
        <div class="section-header">
          <h2>Why Choose Edwards & Smith?</h2>
        </div>
        <div class="benefits-grid">
          <div class="benefit">
            <h3>Transparent Pricing</h3>
            <p>No hidden fees or surprises. Our pricing is clear and competitive: 2-3% in Queensland, under 5% for Bali properties.</p>
          </div>
          <div class="benefit">
            <h3>Off-Market Access</h3>
            <p>Exclusive access to pre-market and off-market properties that never reach public listings.</p>
          </div>
          <div class="benefit">
            <h3>Expert Negotiation</h3>
            <p>Our clients save an average of $65,000 through professional negotiation and market knowledge.</p>
          </div>
          <div class="benefit">
            <h3>Proven Track Record</h3>
            <p>Founded by Jake Edwards and Ely Smith, we bring discipline, strategy, and commitment to every purchase.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section section">
      <div class="container">
        <div class="section-header">
          <h2>Frequently Asked Questions</h2>
        </div>
        <div class="faq-grid">
          <div class="faq-item">
            <h3>How much do buyers agents charge in Queensland?</h3>
            <p>
              Our fees range from 2-3% of the purchase price in Queensland. The exact percentage depends
              on the property value and scope of services required. We provide transparent quotes upfront
              with no hidden fees.
            </p>
          </div>
          <div class="faq-item">
            <h3>What's included in the full buyers agent service?</h3>
            <p>
              Our full service includes everything from initial property search and off-market access,
              through to inspections, due diligence, negotiation or auction bidding, and settlement support.
              We handle the entire purchase process on your behalf.
            </p>
          </div>
          <div class="faq-item">
            <h3>Can I hire you just for auction bidding?</h3>
            <p>
              Yes. Our Auction Representation service is perfect if you've found a property going to
              auction and want professional bidding support. We charge a fixed fee for this service.
            </p>
          </div>
          <div class="faq-item">
            <h3>Do you work in Bali?</h3>
            <p>
              Yes. We provide buyers agent services for Bali property purchases, including villas and
              investment properties. Our Bali service fees are under 5% of the purchase price.
            </p>
          </div>
          <div class="faq-item">
            <h3>How do I know which service is right for me?</h3>
            <p>
              Book a free consultation and we'll discuss your situation, timeline, and budget. We'll
              recommend the service level that best suits your needs and provide transparent pricing.
            </p>
          </div>
          <div class="faq-item">
            <h3>Do you charge for the initial consultation?</h3>
            <p>
              No. Your first consultation is completely free. We'll discuss your requirements, explain
              our services, and provide clear pricing with no obligation.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section section">
      <div class="container">
        <h2>Ready to Work With a Professional Buyers Agent?</h2>
        <p>Book a free consultation to discuss your property goals and get transparent pricing for our services.</p>
        <a href="#contact" class="button-primary">Book Free Consultation</a>
        <p class="cta-note">No obligation | Transparent pricing | Expert advice</p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .services-hero {
    background-image: url('https://edwardsandsmith.com.au/wp-content/uploads/2025/08/outdoor-carina.jpg'), linear-gradient(135deg, rgba(90, 91, 84, 0.85), rgba(137, 139, 122, 0.85));
    background-size: cover;
    background-position: center;
    background-blend-mode: overlay;
    color: var(--white);
    text-align: center;
    padding: 60px 20px;
    position: relative;
  }

  .services-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(90, 91, 84, 0.7), rgba(137, 139, 122, 0.7));
    z-index: 0;
  }

  .services-hero .container {
    position: relative;
    z-index: 1;
  }

  .services-hero h1 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .hero-subtitle {
    font-family: var(--font-heading);
    font-size: 20px;
    margin-bottom: 20px;
  }

  .hero-description {
    max-width: 700px;
    margin: 0 auto;
    font-size: var(--body-regular);
    line-height: 1.6;
  }

  .intro-section {
    background-color: #f9f9f9;
  }

  .intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .intro-text h2 {
    margin-bottom: 20px;
    color: var(--primary-green);
  }

  .intro-text p {
    font-size: var(--body-large);
    line-height: var(--line-height-body);
    margin-bottom: 20px;
  }

  .intro-image img {
    width: 100%;
    border-radius: var(--border-radius-small);
    box-shadow: var(--box-shadow-subtle);
  }

  .services-grid-section {
    background-color: var(--white);
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-header h2 {
    margin-bottom: 20px;
  }

  .section-intro {
    max-width: 700px;
    margin: 0 auto;
    color: var(--text-secondary);
    font-size: 16px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .service-card {
    background: var(--white);
    border: 2px solid #e0e0e0;
    border-radius: var(--border-radius-small);
    padding: 30px;
    display: flex;
    flex-direction: column;
    position: relative;
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--box-shadow-medium);
  }

  .service-card.featured {
    border-color: var(--primary-green);
    box-shadow: var(--box-shadow-subtle);
  }

  .service-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--primary-green);
    color: var(--white);
    font-family: var(--font-heading);
    font-size: 12px;
    padding: 6px 16px;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .service-header {
    margin-bottom: 20px;
  }

  .service-header h3 {
    color: var(--primary-green);
    margin-bottom: 10px;
    font-size: 24px;
  }

  .service-price {
    font-family: var(--font-heading);
    font-size: 14px;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .service-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-description {
    margin-bottom: 20px;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .service-features {
    list-style: none;
    margin-bottom: 30px;
    flex: 1;
  }

  .service-features li {
    padding: 8px 0 8px 25px;
    position: relative;
    color: var(--text-primary);
    line-height: 1.5;
  }

  .service-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--primary-green);
    font-weight: bold;
  }

  .button-secondary {
    display: block;
    width: 100%;
    text-align: center;
    background-color: transparent;
    color: var(--primary-green);
    border: 2px solid var(--primary-green);
    font-family: var(--font-heading);
    font-size: 14px;
    padding: 12px 20px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .button-secondary:hover {
    background-color: var(--primary-green);
    color: var(--white);
  }

  .why-section {
    background-color: #f9f9f9;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .benefit h3 {
    color: var(--primary-green);
    margin-bottom: 10px;
  }

  .faq-section {
    background-color: var(--white);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .faq-item h3 {
    color: var(--primary-green);
    font-size: 18px;
    margin-bottom: 10px;
  }

  .cta-section {
    background-color: var(--primary-green);
    color: var(--white);
    text-align: center;
  }

  .cta-section h2 {
    color: var(--white);
    margin-bottom: 15px;
  }

  .cta-section p {
    margin-bottom: 25px;
    font-size: var(--body-large);
  }

  .cta-note {
    font-size: 14px;
    margin-top: 20px;
    opacity: 0.9;
  }

  @media (max-width: 1024px) {
    .intro-content {
      grid-template-columns: 1fr;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .benefits-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

