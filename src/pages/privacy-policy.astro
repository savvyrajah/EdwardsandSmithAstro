    margin: 0 auto;
    padding: 0 20px;
  }

  .last-updated {
    text-align: center;
    font-style: italic;
    color: var(--text-light);
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
  }

  .policy-section {
    margin-bottom: 50px;
  }

  .policy-section h2 {
    color: var(--primary-green);
    font-size: 24px;
    margin-bottom: 20px;
    padding-top: 10px;
  }

  .policy-section p {
    font-size: 16px;
    line-height: 1.8;
    color: var(--text-primary);
    margin-bottom: 15px;
  }

  .policy-section ul {
    margin: 20px 0;
    padding-left: 0;
    list-style: none;
  }

  .policy-section li {
    font-size: 16px;
    line-height: 1.8;
    color: var(--text-primary);
    margin-bottom: 12px;
    padding-left: 30px;
    position: relative;
  }

  .policy-section li::before {
    content: 'â€¢';
    color: var(--primary-green);
    font-size: 20px;
    position: absolute;
    left: 10px;
    top: 0;
  }

  .policy-section a {
    color: var(--primary-green);
    text-decoration: underline;
  }

  .policy-section a:hover {
    color: var(--olive-green);
  }

  .contact-details {
    background-color: #f9f9f9;
    padding: 25px;
    border-radius: 8px;
    border-left: 4px solid var(--primary-green);
    margin-top: 20px;
  }

  .contact-details p {
    margin-bottom: 10px;
  }

  .contact-details a {
    color: var(--primary-green);
    text-decoration: none;
    font-weight: 500;
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .consent-section {
    background-color: #f9f9f9;
    padding: 30px;
    border-radius: 8px;
    border: 2px solid var(--primary-green);
    margin-top: 40px;
  }

  .consent-section h2 {
    margin-top: 0;
  }

  .faq-section {
    background-color: transparent;
    border: none;
    padding: 0;
    margin-top: 60px;
  }

  .faq-section h2 {
    text-align: center;
    margin-bottom: 40px;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    margin-top: 30px;
  }

  .faq-item {
    background-color: var(--white);
    padding: 25px;
    border-radius: 8px;
    border-left: 4px solid var(--primary-green);
    box-shadow: var(--box-shadow-subtle);
  }

  .faq-item h3 {
    color: var(--primary-green);
    font-size: 18px;
    margin-bottom: 12px;
    margin-top: 0;
  }

  .faq-item p {
    font-size: 15px;
    line-height: 1.6;
    color: var(--text-primary);
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .faq-grid {
      grid-template-columns: 1fr;
    }
    .hero {
      padding: 40px 20px;
    }

    .policy-section h2 {
      font-size: 20px;
    }

    .policy-section p,
    .policy-section li {
      font-size: 15px;
    }

    .contact-details {
      padding: 20px;
    }
  }
</style>

